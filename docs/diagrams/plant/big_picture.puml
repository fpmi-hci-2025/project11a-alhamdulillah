@startuml
skinparam packageStyle rectangle
left to right direction

package 'Система ресторана «Махачкала»' {
  event 'Пользователь делает заказ' as E1
  event 'Ресторан получает заказ' as E2
  event 'Блюдо готовится' as E3
  event 'Заказ доставляется/выдаётся' as E4
  event 'Оплата заказа' as E5
  event 'Пользователь оставляет отзыв' as E6

  E1 -> E2 : отправка заказа
  E2 -> E3 : начало приготовления
  E3 -> E4 : готовность блюда
  E4 -> E5 : выдача/доставка заказа
  E5 -> E6 : завершение транзакции
}
@enduml
